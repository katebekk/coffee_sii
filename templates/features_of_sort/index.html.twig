{% extends 'base.html.twig' %}

{% block title %}Редактор признаков сортов{% endblock %}

{% block body %}
    <style>
        .layer {
            overflow-x: auto; /* Добавляем полосы прокрутки */
            width: calc(100vw - 100px); /* Ширина блока */
            height: 50%; /* Высота блока */
            padding: 5px; /* Поля вокруг текста */
            /*border: solid 1px black; !* Параметры рамки *!*/
        }
    </style>
    <h2>Редактирование признаков сортов</h2>

    <div class="layer">
        <table class="table" >
            <thead>
            <tr>
                <th>Сорт кофе</th>
                <th>Признаки сорта</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for coffeeSort in coffeeSorts %}
                <tr>
                    <td>{{ coffeeSort }}</td>
                    <td>
                        <ul>
                            {% for feature in coffeeSort.quanFeatures %}
                                <li> {{ feature }}</li>
                            {% else %}
                                ...
                            {% endfor %}
                            {% for feature in coffeeSort.countFeatures %}
                                <li> {{ feature }}</li>
                            {% else %}
                                ...
                            {% endfor %}
                        </ul>
                    </td>
                    <td>
                        <button class="green"><a href="{{ path('features_of_sort_edit', {'id': coffeeSort.id}) }}">Редактировать</a>
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">сорта кофе отсутствуют</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('knowledge_editor') }}">назад</a>
{% endblock %}
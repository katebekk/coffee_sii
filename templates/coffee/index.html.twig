{% extends 'base.html.twig' %}

{% block title %}Coffee index{% endblock %}

{% block body %}
    <h1>Coffee index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Class</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coffee in coffees %}
            <tr>
                <td>{{ coffee.class }}</td>
                <td>
                    <a href="{{ path('coffee_show', {'id': coffee.id}) }}">show</a>
                    <a href="{{ path('coffee_edit', {'id': coffee.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="29">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('coffee_new') }}">Create new</a>
{% endblock %}

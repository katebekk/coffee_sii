{% extends 'base.html.twig' %}

{% block title %}CoffeeSort index{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="font-weight-light">Список сортов</h2>

        <div class="layer" data-spy="scroll" data-offset="0">
            <ul class="list-group">
                {% for coffee_sort in coffee_sorts %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ coffee_sort.name }}
                        <span class="badge badge-primary badge-pill">{{ include('coffee_sort/_delete_form.html.twig') }}</span>
                    </li>
                {% else %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Сорта кофе не добавлены
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    </div>
    <div class="center bg-light">
        <h3 class="font-weight-light"> Новый сорт</h3>
        {{ include('coffee_sort/_form.html.twig') }}
        <a class="btn-light nav-link link-dark px-2" href="{{ path('knowledge_editor') }}">назад</a>
    </div>

{% endblock %}

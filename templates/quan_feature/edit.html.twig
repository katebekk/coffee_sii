{% extends 'base.html.twig' %}

{% block title %}Edit QuanFeature{% endblock %}

{% block body %}
    <h3>Редактировать признак: {{ quan_feature.name }}</h3>

    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for possible_value in quan_feature.quanPossibleValues %}
            <tr>
                <td>{{ possible_value.name }}</td>
                <td>
                    {{ include('quan_possible_values/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ include('quan_feature/_form.html.twig') }}
    <a href="{{ path('feature_edit') }}">назад</a>

{% endblock %}

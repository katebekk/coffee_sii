{% extends 'base.html.twig' %}

{% block title %}возможные значения{% endblock %}

{% block body %}
    <h3> {{ quan_feature.name }} : возможные значения</h3>

    <table class="table">
        <thead>
        <tr>
            <th>Название</th>
        </tr>
        </thead>
        <tbody>
        {% for possible_value in quan_feature.quanPossibleValues %}
            <tr>
                <td>{{ possible_value.name }}</td>
                <td>
                    {{ include('quan_possible_values/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Значения не добавлены</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ include('quan_feature/_form.html.twig') }}
    <a href="{{ path('feature_index') }}">назад</a>

{% endblock %}

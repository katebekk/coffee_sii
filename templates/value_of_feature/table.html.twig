<table border="2" >
    <thead>
    <tr>
        <th>Признак</th>
        <th>Значение признака</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    {% for feature in coffeeSort.countfeatures %}
        {% set empty = true %}
        <tr>
            <td>{{ feature }}</td>
            {% for value in countFeatureValue %}
                {% if value.coffeeSort == coffeeSort and value.feature == feature %}
                    <td>
                        [{{ value.min }}:
                        {{ value.max }}]
                    </td>
                    <td>
                        <a href="{{ path('value_of_count_feature_edit', {'sortId': coffeeSort.id, 'featureId': feature.id}) }}">Редактировать</a>
                    </td>
                    {% set empty = false %}
                {% endif %}
            {% endfor %}
            {% if empty %}
                <td>
                    Нет значения
                </td>
                <td>
                    <a href="{{ path('value_of_count_feature_edit', {'sortId': coffeeSort.id, 'featureId': feature.id}) }}">Редактировать</a>
                </td>
            {% endif %}
        </tr>
    {% else %}
        <tr>
            <td colspan="3">Для данного сорта не указаны признаки</td>
        </tr>
    {% endfor %}
    {% for feature in coffeeSort.quanfeatures %}
        {% set empty = true %}
        <tr>
            <td>{{ feature }}</td>
            {% for value in quanFeatureValue %}
                {% if value.coffeeSort == coffeeSort and value.feature == feature %}
                    <td>
                        <ul>
                        {% for featureValue in value.featureValues %}
                          <li>{{ featureValue  }}</li>
                        {% else %}
                        {% endfor %}
                        </ul>
                    </td>
                    <td>
                        <a href="{{ path('value_of_quan_feature_edit', {'sortId': coffeeSort.id, 'featureId': feature.id}) }}">Редактировать</a>
                    </td>
                    {% set empty = false %}
                {% endif %}
            {% endfor %}
            {% if empty %}
                <td>
                    Нет значения
                </td>
                <td>
                    <a href="{{ path('value_of_quan_feature_edit', {'sortId': coffeeSort.id, 'featureId': feature.id}) }}">Редактировать</a>
                </td>
            {% endif %}
        </tr>
    {% else %}
        <tr>
            <td colspan="3">Для данного сорта не указаны признаки</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
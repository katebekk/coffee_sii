{% extends 'base.html.twig' %}

{% block title %}Проверка целостности для сорта{% endblock %}

{% block body %}

    <div class="container">
        <h2>Проверка целостности</h2>
        <ul class="list-group">
            {% for message in result %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ message|first }}
                    <a class="btn-light nav-link link-dark px-2" href="{{ message|last }}">Исправить</a>
                </li>
            {% else %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Нет сообщений
                </li>
            {% endfor %}

        </ul>
    </div>

{% endblock %}